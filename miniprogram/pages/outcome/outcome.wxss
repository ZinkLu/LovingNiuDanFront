/**index.wxss**/
.common-box {
  display: flex;
  height: 100%;
  align-items: center;
  justify-content: flex-start;
  flex-direction: column;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -99999;
}

.panel-box {
  display: flex;
  height: 100%;
  width: 100%;
  align-items: center;
  justify-content: flex-start;
  flex-direction: column;
}

.form-panel {
  width: 80%;
  height: 70%;
  background-color: #fff;
  margin-top: 15%;
  /* border-radius: 6%; */
  position: relative;
}

.panel-content {
  height: 95%;
  width: 80%;
  margin-left: 10%;
  /* margin-top: 10%; */
  position: relative;
  z-index: 2;
}

.swiper-box {
  width: 100vw;
  height: 100vh;
}

.name {
  font-size: 36rpx;
}

.split-dash {
  border: 1rpx dashed lightgray;
  margin-top: 20rpx;
}

.left-right {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info-right {
  font-size: 30rpx;
  margin-top: 20rpx;
  width: 40%;
}

.info-left {
  font-size: 30rpx;
  margin-top: 20rpx;
  width: 50%;
}

.info {
  font-size: 30rpx;
  line-height: 34rpx;
  word-break: keep-all;
  word-wrap: break-word;
  margin-top: 20rpx;
}

.rule {
  width: 80%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 20rpx;
  color: rgb(153, 152, 217);
}

.outer {
  width: 20rpx;
  height: 20rpx;
  border: 1rpx solid rgb(153, 152, 217);
  border-radius: 50%;
  margin-right: 20rpx;
}

.inner {
  margin: 4rpx;
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background-color: rgb(153, 152, 217);
}

.btn {

  width: 50%;
  height: 100rpx;
  background-color: rgb(237, 189, 202);
  border-radius: 50rpx;
  line-height: 100rpx;
  text-align: center;
  color: rgb(147, 147, 194);
  font-size: 46rpx;
  letter-spacing: 10rpx;
  margin-top: 20rpx;
} 